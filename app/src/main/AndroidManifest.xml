<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_pokedex"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_pokedex_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pokedex">

        <activity
            android:name="com.pokedev.app.ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.pokedev.app.ui.DetailActivity"
            android:exported="false" />

        <activity
            android:name="com.pokedev.app.ui.SplashActivity"
            android:exported="false" />

    </application>

</manifest>




